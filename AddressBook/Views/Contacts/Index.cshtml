@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Index</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered" id="contacts-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Contacts will be populated here by jQuery -->
        </tbody>
    </table>
</div>

<p>
    <a href="/Contacts/Create" class="btn btn-success">Create New</a>
</p>

<!-- Bootstrap Modal for Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Contact</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editId">
                    <div class="form-group">
                        <label for="editName" class="control-label">Name</label>
                        <input type="text" id="editName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editPhoneNumber" class="control-label">Phone Number</label>
                        <input type="text" id="editPhoneNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editAddress" class="control-label">Address</label>
                        <input type="text" id="editAddress" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editEmail" class="control-label">Email</label>
                        <input type="email" id="editEmail" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveEdit">Save changes</button>
                <button type="button" class="btn btn-danger" id="deleteContact">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            let editContactId;

            // Fetch contacts
            $.ajax({
                url: '/Contacts/GetContacts',
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    var tableBody = $('#contacts-table tbody');
                    data.forEach(function (item) {
                        var row = `
                                    <tr>
                                        <td>${item.name}</td>
                                        <td>${item.phoneNumber}</td>
                                        <td>${item.address}</td>
                                        <td>${item.email}</td>
                                        <td>
                                            <button class="btn btn-primary mb-2" data-id="${item.id}" data-name="${item.name}" data-phone="${item.phoneNumber}" data-address="${item.address}" data-email="${item.email}" data-bs-toggle="modal" data-bs-target="#editModal">Edit</button>
                                        </td>
                                    </tr>`;
                        tableBody.append(row);
                    });

                    // Attach click event to edit buttons to show the modal with contact details
                    tableBody.on('click', '.btn-primary', function () {
                        editContactId = $(this).data('id');
                        $('#editId').val(editContactId);
                        $('#editName').val($(this).data('name'));
                        $('#editPhoneNumber').val($(this).data('phone'));
                        $('#editAddress').val($(this).data('address'));
                        $('#editEmail').val($(this).data('email'));
                    });
                },
                error: function (error) {
                    console.error('Error fetching contacts', error);
                }
            });

            // Save changes on edit modal
            $('#saveEdit').click(function () {
                var updatedContact = {
                    Id: $('#editId').val(),
                    Name: $('#editName').val(),
                    PhoneNumber: $('#editPhoneNumber').val(),
                    Address: $('#editAddress').val(),
                    Email: $('#editEmail').val()
                };

                $.ajax({
                    url: `/Contacts/Edit/${editContactId}`,
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(updatedContact),
                    success: function (response) {
                        if (response.success) {
                            $('#editModal').modal('hide');
                            // Refresh the contact row with updated data
                            var row = $(`button[data-id='${editContactId}']`).closest('tr');
                            row.find('td:eq(0)').text(updatedContact.Name);
                            row.find('td:eq(1)').text(updatedContact.PhoneNumber);
                            row.find('td:eq(2)').text(updatedContact.Address);
                            row.find('td:eq(3)').text(updatedContact.Email);
                        } else {
                            alert('Failed to update contact: ' + response.message);
                        }
                    },
                    error: function (error) {
                        console.error('Error updating contact', error);
                    }
                });
            });

            // Delete contact from edit modal
            $('#deleteContact').click(function () {
                if (confirm('Are you sure you want to delete this contact?')) {
                    $.ajax({
                        url: `/Contacts/Delete/${editContactId}`,
                        method: 'DELETE',
                        success: function () {
                            $('#editModal').modal('hide');
                            $(`button[data-id='${editContactId}']`).closest('tr').remove();
                        },
                        error: function (error) {
                            console.error('Error deleting contact', error);
                        }
                    });
                }
            });
        });
    </script>
}
